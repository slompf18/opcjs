{
  "name": "@your-org/opcuajs",
  "version": "0.1.0",
  "description": "OPC UA JavaScript client library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "opcua-generator": "./dist/generator/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/base",
    "packages/generator",
    "packages/client"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "generate:services": "node ./src/generators/runServicesGenerator.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opcua",
    "opc-ua",
    "client",
    "industrial",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "csv-parse": "^5.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^10.0.2",
    "fast-xml-parser": "^5.4.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
