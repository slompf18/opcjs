    "dev": "tsup --watch",
    "test": "vitest"
  },
  "keywords": [
    "opcua",
    "opc-ua",
    "client"
  ],
  "author": "slompf18",
  "license": "MIT",
  "dependencies": {
    "@opcua/base": "*"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
